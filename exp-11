#include<iostream>
using namespace std;
 int main() {
 int ms, ms_left, n, p[10];
 cout << "Enter total memory size: ";
 cin >> ms; ms_left = ms;
 cout << "Enter number of processes: ";
 cin >> n;
 for (int i = 0; i < n; i++){
 cout << "Enter memory required for process " << i+1 << ": ";
 cin >> p[i]; 
if (p[i] <= ms_left) {
 cout << "Process " << i+1 << " allocated. Remaining memory: " << (ms_left - p[i]) << endl;
 ms_left -= p[i];
 }
 else {
 cout << "Not enough memory for process " << i+1 << "." << endl; 
}
 } 
return 0;
 }
